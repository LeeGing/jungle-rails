<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">


          <% if flash[:notice] %>
            <div class="alert alert-info" role="alert"><%= flash[:notice]%></div>
          <% end %>





    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
        <% @product.reviews.each do |review| %>
        <div class="col-sm-8">
          <dl class="dl-horizontal">
            <dt class="descriptiontext">Name</dt>
           <dd><%= review.user.name %></dd>
        <div class="col-sm-8">
          <dl class="dl-horizontal">
            <dt>Rating:</dt>
            <dd><%= review.rating %></dd>
          </dl>
        </div>
        <div class="col-sm-8">
          <dl class="dl-horizontal">
            <dt class="descriptiontext">Description</dt>
           <dd><%= review.description %></dd>
          </dl>
        </div>
        <% end %>
      </div>
      <div>
       <%= render 'reviews/form' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>

</section>
